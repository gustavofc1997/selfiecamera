<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeActivity">

    <ImageView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="689dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/btn_48x48_hw_singin_light_red" />

        <TextView
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selfie_camera" />
        <TextView
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hay 2 formas de capturar tu selfie, la camara toma la fotos si hay varias personas sonriendo o si hay una mas cerca sonriendo" />

        <Button
            android:id="@+id/buttonAll"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:background="@color/hwid_auth_button_color_red"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multiples_button" />
        <Button
            android:id="@+id/buttonSingle"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:background="@color/hwid_auth_button_color_red"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/single_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>